<!-- sending pageTitle name to head. -->
<%- include('../../shared/includes/head', {pageTitle: 'Signup'}) %> 
<link rel="stylesheet" href="/styles/forms.css">
<link rel="stylesheet" href="/styles/auth.css">

</head>
<body>
    <%- include('../../shared/includes/header') %>
  <main>
      <h1>Create New Account</h1>
      <% if(inputData.errorMessage) { %>
        <section class="alert">
             <h2>Invalid Input</h2>
             <p><%= inputData.errorMessage %></p>
        </section>

      <% } %>  
      <form action="/signup" method="POST">
         <p>
             <label for="email">Email</label>
             <input type="email" id="email" value="<%= inputData.email %>" name="email" required>
        </p>
        <p>
             <label for="confirm-email">Confirm Email</label>
             <input type="email" id="confirm-email" value="<%= inputData.confirmEmail %>" name="confirm-email" required>
        </p>
        <p>
            <label for="password">Password</label>
            <input type="password" id="password" value="<%= inputData.password %>" name="password" minLength="6" required>
        </p>
        <hr>
        <p>
            <label for="fullname">Full name</label>
            <input type="text" id="fullname" value="<%= inputData.fullname %>" name="fullname" required>
        </p> 
        <p>
            <label for="street">Street</label>
            <input type="text" id="street" value="<%= inputData.street %>" name="street" required>
        </p> 
        <p>
            <label for="postal">Postal Code</label>
            <input type="text" id="postal" value="<%= inputData.postal %>" name="postal" minlength="3" maxlength="3" required>
        </p> 
        <p>
            <label for="city">City</label>
            <input type="text" id="city" value="<%= inputData.city %>" name="city" required>
        </p> 

        <button class="btn">Create Account</button>
        <p id="switch-form"><a href="/login">Login Instead</a></p>
        
      </form>
  </main>  

<%- include('../../shared/includes/footer') %>    
